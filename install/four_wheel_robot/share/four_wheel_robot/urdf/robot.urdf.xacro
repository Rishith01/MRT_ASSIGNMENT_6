<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="four_wheel_robot">
  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.5 0.3 0.1"/> <!-- Adjust dimensions as needed -->
      </geometry>
      <material>
        <color rgba="0.8 0.8 0.8 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.3 0.1"/> <!-- Adjust dimensions as needed -->
      </geometry>
    </collision>
    <inertial>
      <mass value="10.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <!-- Wheels -->
  <xacro:macro name="wheel" params="name x y z">
    <link name="${name}">
      <visual>
        <geometry>
          <cylinder radius="0.05" length="0.02"/> <!-- Adjust dimensions as needed -->
        </geometry>
        <material>
          <color rgba="0.0 0.0 0.0 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.05" length="0.02"/> <!-- Adjust dimensions as needed -->
        </geometry>
      </collision>
      <inertial>
        <mass value="1.0"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
      </inertial>
    </link>
    <joint name="${name}_joint" type="revolute">
      <parent link="base_link"/>
      <child link="${name}"/>
      <origin xyz="${x} ${y} ${z}" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit effort="1000.0" lower="0" upper="0" velocity="0"/>
      <dynamics damping="0.0" friction="0.0"/>
    </joint>
  </xacro:macro>

  <!-- Four Wheels -->
  <xacro:wheel name="wheel_front_left" x="0.2" y="0.15" z="0"/>
  <xacro:wheel name="wheel_front_right" x="0.2" y="-0.15" z="0"/>
  <xacro:wheel name="wheel_back_left" x="-0.2" y="0.15" z="0"/>
  <xacro:wheel name="wheel_back_right" x="-0.2" y="-0.15" z="0"/>

  <!-- Robotic Arm Base -->
  <link name="arm_base">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.05"/> <!-- Adjust dimensions as needed -->
      </geometry>
      <material>
        <color rgba="0.8 0.8 0.8 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.05"/> <!-- Adjust dimensions as needed -->
      </geometry>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.02" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.02"/>
    </inertial>
  </link>
  <joint name="arm_base_joint" type="revolute">
    <parent link="base_link"/>
    <child link="arm_base"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-3.14" upper="3.14" velocity="1.0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <!-- Telescopic Arm -->
  <link name="telescopic_arm">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.2"/> <!-- Adjust dimensions as needed -->
      </geometry>
      <material>
        <color rgba="0.8 0.8 0.8 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.05 0.05 0.2"/> <!-- Adjust dimensions as needed -->
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>
  <joint name="telescopic_arm_joint" type="prismatic">
    <parent link="arm_base"/>
    <child link="telescopic_arm"/>
    <origin xyz="0 0 0.025" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="0" upper="0.5" velocity="0.1"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <!-- Gripper -->
  <link name="gripper">
    <visual>
      <geometry>
        <box size="0.1 0.02 0.02"/> <!-- Adjust dimensions as needed -->
      </geometry>
      <material>
        <color rgba="0.8 0.8 0.8 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.02 0.02"/> <!-- Adjust dimensions as needed -->
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.005" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005"/>
    </inertial>
  </link>
  <joint name="gripper_joint" type="revolute">
    <parent link="telescopic_arm"/>
    <child link="gripper"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="1000.0" lower="-0.5" upper="0.5" velocity="1.0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>
</robot>

